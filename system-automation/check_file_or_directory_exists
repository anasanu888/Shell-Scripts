#!/bin/bash

# Define the file or directory path we want to check
path="/tmp/testfile"

# Check if the given path is a FILE
if [ -f "$path" ]; then
    echo "âœ… File exists: $path"

# Check if the given path is a DIRECTORY
elif [ -d "$path" ]; then
    echo "ğŸ“ Directory exists: $path"

# If neither file nor directory exists â€” create file
else
    echo "âŒ Not found â€” creating file..."
    touch "$path"     # Creates an empty file
    echo "âœ… File created: $path"
fi
